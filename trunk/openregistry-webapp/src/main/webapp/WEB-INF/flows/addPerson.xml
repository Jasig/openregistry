<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!-- By default, the first state is the start state. -->
    <var name="personSearch" class="org.openregistry.core.domain.jpa.sor.JpaSorPersonSearchImpl" />

    <view-state id="addPerson" model="personSearch" view="openregistry.person.add.insert">
        <binder>
            <binding property="person.dateOfBirth" converter="shortDate" required="true"/>
            <binding property="person.firstAddedName.prefix" />
            <binding property="person.firstAddedName.given" required="true" />
            <binding property="person.firstAddedName.middle" />
            <binding property="person.firstAddedName.family" required="true"/>
            <binding property="person.firstAddedName.suffix" />
            <binding property="person.gender" required="true" />
            <binding property="person.ssn" />
            <binding property="phoneNumber" />
            <binding property="emailAddress" />
        </binder>
        <on-entry>
            <evaluate expression="personSearch.getPerson().addName()" />
        </on-entry>
        <on-render>
            <set name="viewScope.command" value="personSearch" />
        </on-render>
        <transition on="submitAddPerson" to="checkAddSucceeded" >
            <evaluate expression="personSearch.getPerson().setSourceSorIdentifier('or-webapp')" />
            <evaluate expression="personService.addPerson(personSearch, null)" result="flowScope.serviceExecutionResult"/>
        </transition>
        <transition on="cancelAddPerson" to="cancelCreatePerson"/>  
    </view-state>

    <decision-state id="checkAddSucceeded">
        <if test="flowScope.serviceExecutionResult.succeeded()" then="addSucceeded" else="matchesFound" />
    </decision-state>
    
    <action-state id="addSucceeded">
        <evaluate expression="serviceExecutionResult.getReconciliationResult().getReconciliationType()" result="flowScope.reconciliationType"/>
        <transition on="EXACT" to="foundPerson" />
        <transition on="NONE"  to="addNewSucceeded"/>
    </action-state>

    <action-state id="matchesFound" >
        <evaluate expression="serviceExecutionResult.getReconciliationResult().getReconciliationType()" result="flowScope.reconciliationType"/>
        <transition on="MAYBE" to="viewMatches">
            <set name="flowScope.serviceExectionResult" value="serviceExecutionResult" />
            <set name="flowScope.personToAdd" value="personSearch.getPerson()" />
        </transition>
    </action-state>

    <view-state id="viewMatches" view="openregistry.person.add.matches" model="flowScope.serviceExecutionResult">
        <on-render>
            <set name="viewScope.command" value="serviceExecutionResult" />
        </on-render>
        <transition on="submitAddPerson" to="addNewSucceeded" >
            <evaluate expression="personService.addPerson(personSearch, serviceExecutionResult.getReconciliationResult())" result="flowScope.serviceExecutionResult"/>
        </transition>
        <transition on="cancelAddPerson" to="cancelCreatePerson"/>
    </view-state>

    <view-state id="addNewSucceeded" view="openregistry.person.add.insert">
        <on-entry>
            <set name="flowScope.infoModel" value="'Person Added'" />
        </on-entry>
        <transition to="personWasAdded"/>
    </view-state>

    <end-state id="personWasAdded" />
    <end-state id="foundPerson" view="openregistry.person.add.found" />
    <end-state id="cancelCreatePerson" view="flowRedirect:addPerson" />
</flow>