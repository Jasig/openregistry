<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="searchCriteria" class="org.openregistry.service.MutableSearchCriteriaImpl" />

    <view-state id="personSearch" model="searchCriteria" view="openregistry.search">
        <on-entry>
            <set name="viewScope.success" value="externalContext.requestParameterMap['success']" />
            <set name="viewScope.cancelled" value="externalContext.requestParameterMap['cancel']" />
            <set name="viewScope.errorMessage" value="flashScope.errorMessage" />
            <set name="viewScope.searchResults" value="flowScope.searchResults" />
            <evaluate expression="referenceRepository.identifierTypes" result-type="java.util.List" result="viewScope.identifierTypes" />
        </on-entry>
        <!-- TODO temporarily disabled validation because of possible spring bug? -->
        <transition on="submit" bind="true" validate="false">
            <evaluate expression="personService.searchForPersonBy(searchCriteria)" result-type="java.util.List" result="flowScope.searchResults" />
            <set name="viewScope.searchResults" value="flowScope.searchResults" />
            <render fragments="searchResults" />
        </transition>
        <transition on="display" to="displayPerson" validate="false">
            <evaluate expression="flowScope.searchResults.get(requestParameters.searchId).person" result-type="org.openregistry.core.domain.Person" result="flowScope.person" />
        </transition>
    </view-state>

    <decision-state id="readResults">
        <if test="searchResults.size eq 0" then="noOneFound" />
        <if test="searchResults.size eq 1" then="onePerson" else="personSearch" />
    </decision-state>

    <action-state id="noOneFound">
        <set name="flashScope.errorMessage" value="resourceBundle.noMatchesFoundMessage" />
        <transition to="personSearch" />
    </action-state>

    <action-state id="onePerson">
        <evaluate expression="flowScope.searchResults.get(0).person" result-type="org.openregistry.core.domain.Person" result="flowScope.person" />
        <transition to="displayPerson" />
    </action-state>

    <view-state id="displayPerson" model="deletionCriteria" view="openregistry.search.displayPerson">
        <var name="deletionCriteria" class="org.openregistry.service.DefaultDeletionCriteriaImpl" />
        <transition on="delete" to="deletePerson" />
        <transition on="cancel" to="cancelled" />
    </view-state>

    <action-state id="deletePerson">
        <evaluate expression="person.roles.get(requestParameters.roleId)" result-type="org.openregistry.core.domain.Role" result="flowScope.role" />
        <evaluate expression="personService.deleteRole(flowScope.person, role,'Deleted')" />
        <transition on="yes" to="success" />
        <transition on="no" to="displayPerson">
            <set name="flashScope.errorMessage" value="resourceBundle.deletionError" />
        </transition>
    </action-state>

    <end-state id="cancelled" view="externalRedirect:contextRelative:deletePerson.htm?cancel=true" />

    <end-state id="success" view="externalRedirect:contextRelative:deletePerson.htm?success=true" />
</flow>