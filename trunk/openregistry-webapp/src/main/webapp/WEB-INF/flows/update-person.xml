<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!-- By default, the first state is the start state. -->
    <var name="personSearch" class="org.openregistry.core.domain.jpa.sor.JpaSorPersonSearchImpl" />
    <var name="sorName" class="org.openregistry.core.domain.jpa.sor.JpaSorNameImpl" />

    <view-state id="updatePerson" model="personSearch" view="openregistry.person.update.update">
        <binder>
            <binding property="person.dateOfBirth" converter="shortDate" required="true"/>
            <binding property="person.gender" required="true" />
            <binding property="person.ssn" />
            <binding property="person.nameList" />
            <binding property="sorName.prefix" />
            <binding property="sorName.first" />
            <binding property="sorName.middle" />
            <binding property="sorName.given" />
            <binding property="sorName.suffix" />
        </binder>
        <on-entry>
            <evaluate expression="personRepository.findSorPersonByInternalId(2)" result="flowScope.sorPerson"/>
            <evaluate expression="personSearch.setSorPerson(sorPerson)"/>
            <evaluate expression="sorPerson.getNameList()" result="flowScope.names"/>
            <evaluate expression="personRepository.findPersonIdentifiers(2)" result="flowScope.identifiers" />
            <set name="viewScope.command" value="personSearch" />
            <set name="viewScope.identifiers" value="identifiers" />
        </on-entry>
        <transition on="submitAddName" to="addName" >
            <evaluate expression="personSearch.getPerson().addName()" result="flowScope.sorName"/>
        </transition>
        <transition on="submitUpdatePerson" to="personWasUpdated" >
            <evaluate expression="personService.updatePerson(personSearch, null)" result="flowScope.serviceExecutionResult"/>
        </transition>
        <transition on="cancelUpdatePerson" to="cancelUpdatePerson"/>
    </view-state>

    <view-state id="addName" model="sorName" view="openregistry.person.update.addName">
        <binder>
            <binding property="prefix" />
            <binding property="given" required="true" />
            <binding property="middle" />
            <binding property="family" required="true"/>
            <binding property="suffix" />
        </binder>
        <on-entry>
            <set name="viewScope.command" value="personSearch" />
        </on-entry>
        <transition on="submitPerformAddName" to="updatePerson" >

        </transition>
        <transition on="cancelUpdatePerson" to="cancelUpdatePerson"/>
    </view-state>

    <end-state id="personWasUpdated" />
    <end-state id="cancelUpdatePerson" view="flowRedirect:updatePerson" />
</flow>