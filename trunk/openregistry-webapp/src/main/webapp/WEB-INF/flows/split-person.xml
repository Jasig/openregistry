<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <subflow-state id="searchForPerson" subflow="searchForPerson" >
        <input name="taskTitleCode" value="'splitPerson.title'"/>
        <output name="person" />
        <transition to="splitPerson" />
    </subflow-state>

    <view-state id="splitPerson" model="person" view="openregistry.person.split">
        <on-entry>
            <evaluate expression="personRepository.getSoRRecordsForPerson(person)" result="flowScope.sorPersons"/>
            <set name="viewScope.command" value="'person'" />
            <set name="flowScope.fromPerson" value="person" />
        </on-entry>
        <transition on="move" to="searchForToPerson">
            <set name="flowScope.sourceSorId" value="requestParameters.sorPersonSorId" />
            <evaluate expression="personRepository.findByPersonIdAndSorIdentifier(person.id, sourceSorId)" result-type="org.openregistry.core.domain.sor.SorPerson" result="flowScope.sorPerson" />
        </transition>
        <transition on="moveToNewPerson" to="doSplitToNewPerson">
            <set name="flowScope.sourceSorId" value="requestParameters.sorPersonSorId" />
            <evaluate expression="personRepository.findByPersonIdAndSorIdentifier(person.id, sourceSorId)" result-type="org.openregistry.core.domain.sor.SorPerson" result="flowScope.sorPerson" />
        </transition>
        <transition on="cancel" to="moveCancelled" />
    </view-state>

    <subflow-state id="searchForToPerson" subflow="searchForPerson" >
        <input name="taskTitleCode" value="'splitPersonTo.title'"/>
        <output name="person" />
        <transition to="doSplit" />
    </subflow-state>

    <action-state id="doSplit">
        <on-entry>
            <set name="flowScope.toPerson" value="person" />
        </on-entry>
        <evaluate expression="personService.moveSystemOfRecordPerson(fromPerson, toPerson, sorPerson)" result="FlowScope.moveResult" />
        <transition on="yes" to="splitSucceeded" />
        <transition on="no" to="splitFailed" />
    </action-state>

    <action-state id="doSplitToNewPerson">
        <evaluate expression="personService.moveSystemOfRecordPersonToNewPerson(fromPerson, sorPerson)" result="FlowScope.moveResult" />
        <transition on="yes" to="splitSucceeded" />
        <transition on="no" to="splitFailed" />
    </action-state>

    <view-state id="splitSucceeded" view="openregistry.main">
        <on-entry>
            <set name="flowScope.infoModel" value="'Sor Record Moved'" />
        </on-entry>
        <transition to="splitDone"/>
    </view-state>

    <view-state id="splitFailed" view="openregistry.main">
        <on-entry>
            <set name="flowScope.infoModel" value="'Sor Record Move Failed'" />
        </on-entry>
        <transition to="splitDone"/>
    </view-state>

    <end-state id="splitDone" />
    <end-state id="moveCancelled" />

</flow>