<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!-- By default, the first state is the start state. -->
    <input name="role" />
    <input name="sorPerson" />

    <view-state id="updateRole" model="role" view="openregistry.role.update">
        <on-entry>
            <set name="viewScope.command" value="'role'" />
            <evaluate expression="referenceRepository.getPeople()" result="flowScope.sponsorList" />
            <evaluate expression="referenceRepository.getCountries()" result="flowScope.countryList" />
        </on-entry>
        <transition on="submitUpdateRole" to="displayPage" >
            <evaluate expression="roleAction.updateSorRole(role, messageContext)"/>
        </transition>
    </view-state>

    <view-state id="displayPage" view="openregistry.role.update">
        <on-entry>
            <set name="flowScope.infoModel" value="'Role Updated'" />
        </on-entry>
        <transition to="roleWasUpdated"/>
    </view-state>

    <end-state id="roleWasUpdated" />

</flow>