<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!-- By default, the first state is the start state. -->
    <input name="role" />
    <input name="sorPerson" />

    <view-state id="updateRole" model="role" view="openregistry.role.update">
        <on-entry>
            <set name="viewScope.command" value="'role'" />
            <evaluate expression="referenceRepository.getPeople()" result="flowScope.sponsorList" />
            <evaluate expression="referenceRepository.getCountries()" result="flowScope.countryList" />
            <evaluate expression="referenceRepository.getEmailTypes()" result="flowScope.emailAddressTypeList" />
            <evaluate expression="referenceRepository.getAddressTypes()" result="flowScope.addressTypeList" />
            <evaluate expression="referenceRepository.getPhoneTypes()" result="flowScope.phoneTypeList" />
        </on-entry>
        <transition on="submitUpdateRole" to="roleWasUpdated" >
            <evaluate expression="roleAction.updateSorRole(role, messageContext)"/>
        </transition>
        <transition on="submitUpdateAddress" to="updateAddress" >
            <set name="requestScope.addressId" value="requestParameters.addressId" type="long" />
            <evaluate expression="role.getAddress(addressId)" result="flowScope.address"/>
        </transition>
    </view-state>

    <view-state id="updateAddress" model="address" view="openregistry.role.address.update">
        <on-entry>
            <set name="viewScope.command" value="'address'" />
            <set name="viewScope.address" value="flowScope.address" />
            <evaluate expression="referenceRepository.getCountries()" result="flowScope.countryList" />
        </on-entry>
        <transition on="submitUpdateAddressInfo" to="roleWasUpdated" >
            <evaluate expression="roleAction.updateSorRole(role, messageContext)"/>
        </transition>
    </view-state>

    <end-state id="roleWasUpdated" />

</flow>