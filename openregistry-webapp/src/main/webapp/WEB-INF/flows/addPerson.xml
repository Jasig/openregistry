<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!-- By default, the first state is the start state. -->
    <var name="personSearch" class="org.openregistry.core.domain.jpa.sor.JpaReconciliationCriteriaImpl" />

    <action-state id="createName">
        <evaluate expression="personSearch.getPerson().addName()" />
        <transition to="addPerson" />
    </action-state>

    <view-state id="addPerson" model="personSearch" view="openregistry.person.add.insert">
        <on-render>
            <set name="viewScope.command" value="'personSearch'" />
        </on-render>
        <transition on="submitAddPerson" to="checkForErrors" bind="true" validate="true">
            <evaluate expression="personSearchAction.addSorPerson(personSearch,null,messageContext)" result="flowScope.serviceExecutionResult" result-type="org.openregistry.core.service.ServiceExecutionResult"/>
            <evaluate expression="serviceExecutionResult.getReconciliationResult()" result="flowScope.reconciliationResult" />
            <evaluate expression="serviceExecutionResult.targetObject" result="flowScope.person" />
        </transition>
        <transition on="cancelAddPerson" to="cancelCreatePerson"/>  
    </view-state>

    <decision-state id="checkForErrors">
        <if test="flowScope.serviceExecutionResult.validationErrors.size() > 0" then="addPerson" else="checkPersonAdded" />
    </decision-state>

    <decision-state id="checkPersonAdded">
        <if test="flowScope.serviceExecutionResult.succeeded()" then="getSorPerson" else="viewMatches" />
    </decision-state>

    <view-state id="viewMatches" view="openregistry.person.add.matches" model="flowScope.serviceExecutionResult">
        <on-render>
            <set name="viewScope.command" value="'personSearch'" />
            <set name="viewScope.personToAdd" value="personSearch.getPerson()" />
        </on-render>
        <transition on="submitAddPerson" to="checkForViewMatchAddErrors" >
            <evaluate expression="personSearchAction.addSorPerson(personSearch, serviceExecutionResult.getReconciliationResult(), messageContext)" result="flowScope.serviceExecutionResult"/>
            <evaluate expression="serviceExecutionResult.targetObject" result="flowScope.person" />
        </transition>
        <transition on="submitAddRole" to="addRole">
            <evaluate expression="personRepository.findByPersonIdAndSorIdentifier(requestParameters.sorPersonId,'or-webapp')" result="flowScope.sorPerson"/>    
        </transition>
        <transition on="cancelAddPerson" to="cancelCreatePerson"/>
    </view-state>

    <decision-state id="checkForViewMatchAddErrors">
        <if test="flowScope.serviceExecutionResult.validationErrors.size() > 0" then="viewMatches" else="checkAddPersonAnyway" />
    </decision-state>

    <decision-state id="checkAddPersonAnyway">
        <if test="flowScope.serviceExecutionResult.succeeded()" then="getSorPerson" else="viewMatches" />
    </decision-state>

    <action-state id="getSorPerson">
        <evaluate expression="personRepository.findByPersonIdAndSorIdentifier(person.id,'or-webapp')" result="flowScope.sorPerson"/>
        <transition to="addRole" />
    </action-state>

    <subflow-state id="addRole" subflow="addRole" >
        <input name="sorPerson" value="flowScope.sorPerson"/>
        <output name="role"/>
        <transition on="roleWasAdded" to="roleAddedSucceeded">
             <evaluate expression="personSearchAction.setConfirmationMessage(person, reconciliationResult,messageContext)" />
        </transition>
    </subflow-state>

    <view-state id="roleAddedSucceeded" view="openregistry.main">
        <transition to="personWasAdded" />
    </view-state>

    <end-state id="personWasAdded" />
    <end-state id="cancelCreatePerson" view="flowRedirect:addPerson" />
</flow>