<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!-- By default, the first state is the start state. -->
    <var name="personSearch" class="org.openregistry.core.domain.jpa.sor.JpaSorPersonSearchImpl" />

    <view-state id="addPerson" model="personSearch" view="openregistry.person.add.insert">
        <binder>
            <binding property="person.dateOfBirth" converter="shortDate" required="true"/>
            <binding property="person.firstAddedName.prefix" />
            <binding property="person.firstAddedName.given" required="true" />
            <binding property="person.firstAddedName.middle" />
            <binding property="person.firstAddedName.family" required="true"/>
            <binding property="person.firstAddedName.suffix" />
            <binding property="person.gender" required="true" />
            <binding property="person.ssn" />
            <binding property="phoneNumber" />
            <binding property="emailAddress" />
        </binder>
        <on-entry>
            <evaluate expression="personSearch.getPerson().addName()" />
        </on-entry>
        <on-render>
            <set name="viewScope.command" value="'personSearch'" />
        </on-render>
        <transition on="submitAddPerson" to="checkForErrors" >
            <evaluate expression="personSearchAction.addSorPerson(personSearch,null,messageContext)" result="flowScope.serviceExecutionResult" result-type="org.openregistry.core.service.ServiceExecutionResult"/>
        </transition>
        <transition on="cancelAddPerson" to="cancelCreatePerson"/>  
    </view-state>

    <decision-state id="checkForErrors">
        <if test="flowScope.serviceExecutionResult.validationErrors.size() > 0" then="addPerson" else="checkPersonAdded" />
    </decision-state>

    <decision-state id="checkPersonAdded">
        <if test="flowScope.serviceExecutionResult.succeeded()" then="addNewSucceeded" else="viewMatches" />
    </decision-state>

    <view-state id="viewMatches" view="openregistry.person.add.matches" model="flowScope.serviceExecutionResult">
        <on-render>
            <set name="viewScope.command" value="'personSearch'" />
            <set name="viewScope.personToAdd" value="personSearch.getPerson()" />
        </on-render>
        <transition on="submitAddPerson" to="checkForViewMatchAddErrors" >
            <evaluate expression="personSearchAction.addSorPerson(personSearch, serviceExecutionResult.getReconciliationResult(), messageContext)" result="flowScope.serviceExecutionResult"/>
        </transition>
        <transition on="cancelAddPerson" to="cancelCreatePerson"/>
    </view-state>

    <decision-state id="checkForViewMatchAddErrors">
        <if test="flowScope.serviceExecutionResult.validationErrors.size() > 0" then="viewMatches" else="checkAddPersonAnyway" />
    </decision-state>

    <decision-state id="checkAddPersonAnyway">
        <if test="flowScope.serviceExecutionResult.succeeded()" then="addNewSucceeded" else="viewMatches" />
    </decision-state>

    <view-state id="addNewSucceeded" view="openregistry.person.add.insert">
        <on-render>
            <set name="flowScope.addSucceeded" value="'addSucceeded'"/>
        </on-render>
        <transition to="personWasAdded" />
    </view-state>

    <end-state id="personWasAdded" />
    <end-state id="cancelCreatePerson" view="flowRedirect:addPerson" />
</flow>