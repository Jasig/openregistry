<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!-- By default, the first state is the start state. -->
    <var name="personSearch" class="org.openregistry.core.domain.jpa.sor.JpaSorPersonSearchImpl" />
    <var name="sorName" class="org.openregistry.core.domain.jpa.sor.JpaSorNameImpl" />

    <view-state id="updatePerson" model="personSearch" view="openregistry.person.update.update">
        <on-entry>
            <evaluate expression="personRepository.findSorPersonByInternalId(2)" result="flowScope.sorPerson"/>
            <evaluate expression="personSearch.setSorPerson(sorPerson)"/>
            <evaluate expression="sorPerson.getNameList()" result="flowScope.names"/>
            <evaluate expression="personRepository.findPersonIdentifiers(sorPerson.getPersonId())" result="flowScope.identifiers" />
            <set name="viewScope.command" value="'personSearch'" />
            <set name="viewScope.identifiers" value="identifiers" />
        </on-entry>
        <transition on="submitAddName" to="addName" >
            <evaluate expression="personSearch.getPerson().addName()" result="flowScope.sorName"/>
        </transition>
        <transition on="submitAddRole" to="selectRole" />

        <transition on="submitUpdateRole" to="updateRole" >
            <set name="requestScope.roleId" value="requestParameters.roleId" type="long" />
            <evaluate expression="personRepository.findSorRoleByInternalId(roleId)" result="flowScope.role"/>
        </transition>

        <transition on="submitUpdatePerson" to="updateSucceeded" >
            <evaluate expression="personSearchAction.updateSorPerson(personSearch, messageContext)"/>
        </transition>

    </view-state>

    <view-state id="addName" model="sorName" view="openregistry.person.update.addName">
        <binder>
            <binding property="prefix" />
            <binding property="given" required="true" />
            <binding property="middle" />
            <binding property="family" required="true"/>
            <binding property="suffix" />
        </binder>
        <on-entry>
            <set name="viewScope.command" value="'sorName'" />
        </on-entry>
        <transition on="submitPerformAddName" to="personWasUpdated" >
            <evaluate expression="personService.updateSorPerson(personSearch)" result="flowScope.serviceExecutionResult"/>
        </transition>
        <transition on="cancelUpdatePerson" to="cancelUpdatePerson"/>
    </view-state>

    <view-state id="selectRole" model="role" view="openregistry.person.update.selectRole">
        <binder>
            <binding property="roleInfo.affiliationType.description" />
            <binding property="roleInfo.title" required="true" />
        </binder>
        <on-entry>
            <evaluate expression="referenceRepository.getAffiliationTypes()" result="flowScope.affiliationList" />
            <set name="viewScope.command" value="'personSearch'" />
            <set name="viewScope.affiliationList" value="affiliationList" />
        </on-entry>
        <transition on="submitPerformAddName" to="updatePerson" />
    </view-state>

    <subflow-state id="updateRole" subflow="updateRole" >
        <input name="role" />
        <input name="sorPerson" />
        <transition to="roleWasUpdated" />
    </subflow-state>

    <view-state id="updateSucceeded" view="openregistry.person.update.update">
        <on-entry>
            <set name="flowScope.infoModel" value="'Person Updated'" />
        </on-entry>
        <transition to="personWasUpdated"/>
    </view-state>

    <end-state id="personWasUpdated" />
    <end-state id="roleWasUpdated" view="flowRedirect:updatePerson" />
</flow>