<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="identifier" class="org.openregistry.core.domain.jpa.JpaIdentifierImpl"/>

    <view-state id="newActivationKey" model="identifier" view="openregistry.generate.activationKey">
        <binder>
            <binding property="value" required="true"/>
            <binding property="type" required="true"/>
        </binder>
        <on-entry>
            <set name="flowScope.menuItem" value="'New Activation Key'" />
        </on-entry>
        <on-render>
            <set name="viewScope.command" value="'identifier'" />
        </on-render>
        <transition on="submitNewActivationKey" to="generateActivationKey" bind="true" validate="true">
            <set name="flowScope.identifier" value="identifier" />
            <evaluate expression="activationService.generateActivationKey(identifier.getType().getName(), identifier.getValue())" result="flowScope.activationKey" result-type="org.openregistry.core.domain.ActivationKey"/>
            <!--<evaluate expression="identifierAction.generateActivationKey(identifier, messageContext)"/>-->
        </transition>
    </view-state>

    <view-state id="generateActivationKey" view="openregistry.complete">
        <on-render>
            <set name="flowScope.infoModel" value="flowScope.activationKey.asString()"/>
        </on-render>
        <transition to="netIDActivated" />
    </view-state>

    <end-state id="netIDActivated" />
</flow>