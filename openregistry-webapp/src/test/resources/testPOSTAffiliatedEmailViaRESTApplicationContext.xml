<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <import resource="basePeopleResourceApplicationContext.xml"/>

    <!-- will be autowired into 'PeopleResource' (imported from the base app ctx) TODO: Change to the real impl for this use case-->
    <bean class="org.openregistry.core.web.resources.AddNewPersonMockitoBasedPersonServiceFactoryBean" init-method="init" id="personService"/>

    <!-- The constructor args are auto-injected. No need to specify here, even though the Spring-aware XML editor complains -->
    <bean id="emailService" class="org.openregistry.core.service.DefaultEmailService"/>

</beans>